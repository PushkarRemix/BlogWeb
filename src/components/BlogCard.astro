---
interface Props {
  title: string;
  description: string;
  image: string;
  href: string;
  date: string;
}

const { title, description, image, href, date } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:-translate-y-1">
  <a href={href}>
    <img src={image} alt={title} class="w-full h-48 object-cover" />
  </a>
  <div class="p-6">
    <time datetime={date} class="text-sm text-gray-500">{new Date(date).toLocaleDateString()}</time>
    <h3 class="mt-2 text-xl font-semibold">
      <a href={href} class="text-gray-900 hover:text-primary-600">{title}</a>
    </h3>
    <p class="mt-3 text-gray-600">{description}</p>
    <div class="mt-4">
      <a
        href={href}
        class="inline-flex items-center text-primary-600 hover:text-primary-700"
      >
        Read More
        <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</article>