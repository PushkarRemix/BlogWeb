---
interface Props {
  post: {
    title: string;
    description: string;
    image: string;
    href: string;
    date: string;
    category: string;
  };
}

const { post } = Astro.props;
---

<article class="relative bg-white rounded-xl shadow-lg overflow-hidden">
  <div class="aspect-w-16 aspect-h-9">
    <img src={post.image} alt={post.title} class="w-full h-[400px] object-cover" />
  </div>
  <div class="absolute inset-0 bg-gradient-to-t from-black/75 to-transparent">
    <div class="absolute bottom-0 p-8 text-white">
      <span class="inline-block px-3 py-1 mb-4 text-sm font-semibold bg-primary-600 rounded-full">
        {post.category}
      </span>
      <h2 class="text-3xl font-bold mb-3">{post.title}</h2>
      <p class="text-gray-200 mb-4">{post.description}</p>
      <div class="flex items-center justify-between">
        <time datetime={post.date} class="text-sm text-gray-300">
          {new Date(post.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        <a
          href={post.href}
          class="inline-flex items-center px-4 py-2 bg-white text-primary-600 rounded-full hover:bg-primary-50 transition-colors"
        >
          Read More
          <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</article>