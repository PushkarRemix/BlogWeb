---
import Layout from '../layouts/Layout.astro';
import FeaturedPost from '../components/home/FeaturedPost.astro';
import CategorySection from '../components/home/CategorySection.astro';
import TrendingSection from '../components/home/TrendingSection.astro';
import SearchBar from '../components/common/SearchBar.astro';

const featuredPost = {
  title: "Top 10 AI Tools Revolutionizing Work in 2024",
  description: "Discover the most powerful AI tools that are transforming how we work, create, and innovate.",
  image: "https://images.unsplash.com/photo-1677442136019-21780ecad995?w=800&q=80",
  href: "/posts/top-10-ai-tools-2024",
  date: "2024-01-22",
  category: "Technology"
};
---

<Layout title="Top 10 Rankings - Your Ultimate Guide to the Best of Everything">
  <!-- Google AdSense Script -->
  <head>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2870239774237701" crossorigin="anonymous"></script>
  </head>

  <div class="bg-gradient-to-b from-primary-50 to-white dark:from-gray-800 dark:to-gray-900 transition-colors duration-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Discover the Best of Everything
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto mb-8">
          Expert-curated rankings and reviews to help you make informed decisions.
        </p>
        
        <!-- Example: Affiliate Banner or Ad Unit above the title -->
        <div class="mb-6">
          <ins class="adsbygoogle"
               style="display:block"
               data-ad-client="ca-pub-2870239774237701"
               data-ad-slot="xxxxxx"   <!-- Replace with your actual AdSlot ID -->
               data-ad-format="auto"></ins>
          <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        </div>

        <SearchBar />
      </div>
    </div>
  </div>

  <main>
    <!-- Featured Post Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <FeaturedPost post={featuredPost} />
    </div>

    <!-- Category Section -->
    <CategorySection title="Explore Categories" />
    
    <!-- Trending Section -->
    <TrendingSection />

    <!-- Subscription Section (Optional monetization) -->
    <section class="py-12 bg-primary-50 dark:bg-gray-800 transition-colors duration-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Never Miss a Ranking</h2>
          <p class="text-gray-600 dark:text-gray-300 mb-6 max-w-2xl mx-auto">
            Subscribe to our newsletter and get the latest rankings, reviews, and exclusive content delivered straight to your inbox.
          </p>
          
          <!-- Subscription Form -->
          <form class="max-w-md mx-auto">
            <div class="flex">
              <input
                type="email"
                placeholder="Enter your email"
                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-l-md focus:ring-primary-500 focus:border-primary-500"
              />
              <button
                type="submit"
                class="px-6 py-2 bg-primary-600 text-white rounded-r-md hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 dark:focus:ring-offset-gray-800"
              >
                Subscribe
              </button>
            </div>
          </form>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer Section -->
  <footer class="bg-gray-900 text-white py-6">
    <div class="text-center">
      <p>&copy; 2024 Top10 Rankings. All rights reserved.</p>

      <!-- Example: AdSense Ad Unit in Footer -->
      <div class="mt-4">
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-2870239774237701"
             data-ad-slot="yyyyyy"  <!-- Replace with your actual AdSlot ID -->
             data-ad-format="auto"></ins>
        <script>
          (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
      </div>
    </div>
  </footer>

</Layout>
